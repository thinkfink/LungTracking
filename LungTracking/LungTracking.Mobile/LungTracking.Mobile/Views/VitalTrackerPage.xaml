<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LungTracking.Mobile.Views.VitalTrackerPage"
             Shell.PresentationMode="ModalAnimated"
             Title="Vital Tracking"
             xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
             ios:Page.UseSafeArea="true">
    <ContentPage.Content>
        <StackLayout Spacing="3" Padding="15">
            <Label Text="Track PEF" FontSize="Medium" TextColor="RoyalBlue" HorizontalOptions="CenterAndExpand"/>
            <Entry x:Name="txtPEFNumber" Text="{Binding PEFNumber, Mode=TwoWay}" FontSize="Medium" BackgroundColor="LightGray"/>
            <Label Text="Track FEV1" FontSize="Medium" TextColor="RoyalBlue" HorizontalOptions="CenterAndExpand"/>
            <Entry x:Name="txtFEV1Number" Text="{Binding FEV1Number, Mode=TwoWay}" FontSize="Medium" BackgroundColor="LightGray"/>
            <Label Text="Track Pulse" FontSize="Medium" TextColor="RoyalBlue" HorizontalOptions="CenterAndExpand"/>
            <Entry x:Name="txtPulseNumber" Text="{Binding PulseNumber, Mode=TwoWay}" FontSize="Medium" BackgroundColor="LightGray"/>
            <Label Text="Track Temperature" FontSize="Medium" TextColor="RoyalBlue" HorizontalOptions="CenterAndExpand"/>
            <Entry x:Name="txtTempNumber" Text="{Binding TempNumber, Mode=TwoWay}" FontSize="Medium" BackgroundColor="LightGray"/>
            <StackLayout Orientation="Horizontal">
                <Button Text="Cancel" Command="{Binding CancelCommand}" HorizontalOptions="FillAndExpand"></Button>
                <Button Text="Save" Command="{Binding SaveCommand}" HorizontalOptions="FillAndExpand" Clicked="Button_Clicked"></Button>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>